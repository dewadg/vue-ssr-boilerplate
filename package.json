{
  "name": "vue-ssr-boilerplate",
  "version": "0.0.1",
  "description": "An SSR Vue boilerplate",
  "main": "server.js",
  "repository": "https://gitlab.com/dewadg/vue-ssr-boilerplate",
  "author": "Adhyaksa Jaya <adhyaksaj@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "NODE_ENV=development nodemon server.js",
    "start": "NODE_ENV=production node server.js",
    "build:server": "NODE_ENV=production webpack --config webpack/server.config.js --progress --hide-modules",
    "build:client": "NODE_ENV=production webpack --config webpack/client.config.js --progress --hide-modules",
    "build": "npm run build:server && npm run build:client"
  },
  "dependencies": {
    "consola": "^2.10.1",
    "fastify": "^2.7.1",
    "fastify-url-data": "^2.3.0",
    "serve-static": "^1.14.1",
    "vue": "^2.6.10",
    "vue-router": "^3.1.2",
    "vue-server-renderer": "^2.6.10",
    "vue-template-compiler": "^2.6.10",
    "vuex": "^3.1.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "chokidar": "^3.0.2",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "dotenv-webpack": "^1.7.0",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "memory-fs": "^0.4.1",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "sass-loader": "^7.2.0",
    "vue-loader": "^15.7.1",
    "vue-style-loader": "^4.1.2",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  }
}
